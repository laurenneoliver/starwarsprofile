{
  "name": "starwarsprofile",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "react": "^19.0.0",
